                                    <label for="sizeRange" class="col-4 col-form-label">Background Color </label>
                                    <div class="col-2">
                                      <div class="color-picker"></div>
                                    </div>
                                    <div class="col-6">
                                        <input type="text" id="colorCodeInHex" class="form-control" value="#ffffff" >
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="sizeRange" class="col-4 col-form-label">Foreground Color </label>
