                                    <div class="col-6">
                                        <input type="text" id="fgColorCodeInHex" class="form-control" value="#0848D4" >
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="sizeRange" class="col-4 col-form-label">Stoke Color </label>
