                                    <div class="col-1">
                                        <span id="angleRangeValue"></span><span>Deg</span>
                                    </div>
                                </div>
                                <!-- heightRange -->
                                <div class="form-group row">
                                    <label for="heightRange" class="col-2 col-form-label">Height</label>
