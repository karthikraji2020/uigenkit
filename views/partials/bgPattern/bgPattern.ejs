<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.2.1/html2canvas.js"></script>
<link rel="stylesheet" href="/css/neumorphism.css">
<!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.5.0-beta4/html2canvas.js"></script> -->
<div class="neumorphism">
    <div class="inner-header flex">
        <div class="container home-banner shadow-lg">
        <h2 class="headerTitle">BgPattern </h2>
        <div class="container" id="content-wrapper">
            <div class="wrpper-grid">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="control-box">   
                            <form>
                               
                                <div class="form-group row">
                                    <label for="sizeRange" class="col-4 col-form-label">Background Color </label>
                                    <div class="col-2">
                                      <div class="color-picker"></div>
                                    </div>
                                    <div class="col-6">
                                        <input type="text" id="colorCodeInHex" class="form-control" value="#ffffff" >
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="sizeRange" class="col-4 col-form-label">Foreground Color </label>
                                    <div class="col-2">
                                      <div class="color-picker2"></div>
                                    </div>
                                    <div class="col-6">
                                        <input type="text" id="fgColorCodeInHex" class="form-control" value="#0848D4" >
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="sizeRange" class="col-4 col-form-label">Stoke Color </label>
                                    <div class="col-2">
                                      <div class="color-picker3"></div>
                                    </div>
                                    <div class="col-6">
                                        <input type="text" id="strokeColorCodeInHex" class="form-control" value="#0848D4">
                                    </div>
                                </div>
                            <!--

                                 Zoom ->scale(1),
                                angle ->rotate(90),
                                spacing -H - > width 
                                spacing -Verticle - > height 

                                rect one - fill
                              -->
                            
                                <!-- sizeRange -->
                                <div class="form-group row">
                                    <label for="zoomRange" class="col-2 col-form-label">Zoom </label>
                                    <div class=" col-8">
                                     <input type="range" min="5" max="18" value="5" id="zoomRange">
                                    </div>
                                    <div class="col-1">
                                        <span id="zoomRangeValue"></span><span>px</span>
                                    </div>
                                </div>
                                <!-- angleRange -->
                                <div class="form-group row">
                                    <label for="angleRange" class="col-2 col-form-label">Angle </label>
                                    <div class=" col-8">
                                       <input type="range" min="0" max="180" value="0" id="angleRange">
                                    </div>
                                    <div class="col-1">
                                        <span id="angleRangeValue"></span><span>Deg</span>
                                    </div>
                                </div>
                                <!-- heightRange -->
                                <div class="form-group row">
                                    <label for="heightRange" class="col-2 col-form-label">Height Spacing </label>
                                    <div class=" col-8">
                                       <input type="range" min="10" max="80" value="15" id="heightRange">
                                    </div>
                                    <div class="col-1">
                                        <span id="heightRangeValue"></span><span>px</span>
                                    </div>
                                </div>
                                <!-- widthRange -->
                                <div class="form-group row">
                                    <label for="widthRange" class="col-2 col-form-label">Width Spacing</label>
                                    <div class=" col-8">
                                       <input type="range" min="10" max="80" value="15" id="widthRange">
                                    </div>
                                    <div class="col-1">
                                        <span id="widthRangeValue"></span><span>px</span>
                                    </div>
                                </div>
                                <!--strokeRange -->
                                <div class="form-group row">
                                    <label for="radiusRange" class="col-2 col-form-label">stroke:</label>
                                    <div class=" col-8">
                                       <input type="range" min="0" max="10" value="1" id="strokeRange">
                                    </div>
                                    <div class="col-1">
                                        <span id="strokeRangeValue"></span><span></span>
                                    </div>
                                </div>
                                <!--intensityRange -->
                                <div class="form-group row">
                                    <label for="radiusRange" class="col-2 col-form-label">Types </label>
                                    <div class="col-8">
                                   <button class="btn btn-dark" type="button" id="shapeType" onclick="toggleInset(this)">Inset</button>
                                    </div>
                                </div>
                       
                            </form>
                            <div class="row">
                                <div class="col-10">
                                    <pre class="copy-css" tooltip="Copy to clipboard">
                                    </pre>
                                </div>
                                <div class="col-2">
                                    <br>
                                    <button  type="button" id="copy">
                                        copy
                                    </button>
                                    <br>
                                    <button type="button" class="btn btn-dark" title="Download as Image" id="downloadAsJpg">
                                        <i class="fa fa-download"></i>
                                       </button>
                                </div>
                            </div>
                               
                        </div>
                      
                    </div>
                    <div class="col-sm-6">
                        <div class="position-wrapper shadow-lg">
                            <div class="box-wrapper">
                                <div class="box">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
          </div>
         
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-colorpicker/2.5.3/js/bootstrap-colorpicker.js"></script>
<script>
    $(document).ready(function(){
        $('#BgPatternColorOne').colorpicker({color:'#626262'});
    }); 
</script>
<script src="/js/bgPattern.js"></script>

