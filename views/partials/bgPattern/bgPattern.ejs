                                       <input type="range" min="10" max="40" value="15" id="heightRange">
                                    </div>
                                    <div class="col-1">
                                        <span id="heightRangeValue"></span><span>px</span>
                                    </div>
                                </div>
                                <!-- widthRange -->
                                <div class="form-group row">
                                    <label for="widthRange" class="col-2 col-form-label">Width</label>
                                    <div class=" col-8">
                                       <input type="range" min="10" max="40" value="15" id="widthRange">
                                    </div>
                                    <div class="col-1">
                                        <span id="widthRangeValue"></span><span>px</span>
                                    </div>
                                </div>
                                <!--strokeRange -->
                                <div class="form-group row">
                                    <label for="radiusRange" class="col-2 col-form-label">stroke:</label>
                                    <div class=" col-8">
                                       <input type="range" min="0" max="10" value="1" id="strokeRange">
                                    </div>
                                    <div class="col-1">
                                        <span id="strokeRangeValue"></span><span></span>
                                    </div>
                                </div>
                                 <!--Random -->
                                 <div class="form-group row">
                                     <div class="col-sm-6">
                                        <label for="radiusRange" class="col-2 col-form-label">Random </label>
